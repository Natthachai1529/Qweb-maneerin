<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contract Form View -->
    <record id="view_contract_form" model="ir.ui.view">
        <field name="name">contract.contract.form</field>
        <field name="model">contract.contract</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="contract_date"/>
                            <field name="project_name"/>
                            <field name="land_id"/>
                            <field name="seller_id" widget="many2one" string="ผู้จะขาย"/>
                        </group>
                    </group>
                    <group>
                        <field name="buyer_ids" label="ผู้จะซื้อ" domain="[('active', '=', True)]">
                            <tree editable="bottom">
                                <field name="active" column_invisible="1"/>
                                <field name="partner_id"/>
                                <field name="age"/>
                                <field name="nation"/>
                                <field name="street"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                        <field name="transferee_ids" label="ผู้รับโอนสิทธิ์" domain="[('active', '=', True)]">
                            <tree editable="bottom">
                                <field name="active" column_invisible="1"/>
                                <field name="partner_id"/>
                                <field name="age"/>
                                <field name="nation"/>
                                <field name="street"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_contract" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">contract.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_contract_root" 
              name="Contract Management" 
              web_icon="contract,static/description/icon.png"
              sequence="1"/>
    
    <menuitem id="menu_contract" 
              name="Contract List"
              parent="menu_contract_root"
              action="action_contract"
              sequence="1"/>
</odoo>