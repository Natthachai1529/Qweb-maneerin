<odoo>
    <!-- Paper Format Definition -->
    <record id="paper_format_custom_report" model="report.paperformat">
        <field name="name">Report Custom Size</field>
        <field name="default" eval="True"/>
        <!-- กำหนดขนาดหน้าเอง -->
        <field name="page_width">210</field> <!-- ความกว้างของกระดาษ -->
        <field name="page_height">297</field> <!-- ความสูงของกระดาษ -->
        <field name="orientation">Portrait</field> <!-- แนวตั้ง -->
        <field name="margin_top">15</field> <!-- ระยะห่างจากขอบด้านบน -->
        <field name="margin_bottom">15</field> <!-- ระยะห่างจากขอบด้านล่าง -->
        <field name="margin_left">15</field> <!-- ระยะห่างจากขอบด้านซ้าย -->
        <field name="margin_right">15</field> <!-- ระยะห่างจากขอบด้านขวา -->
        <field name="header_line" eval="False"/> <!-- ไม่แสดงเส้นหัวบนกระดาษ -->
        <field name="header_spacing">0</field> <!-- ระยะห่างระหว่างส่วนหัวกับเนื้อหา -->
        <field name="dpi">90</field> <!-- ความละเอียดของภาพ -->
    </record>

    <!-- Report Action -->
    <record id="action_report_contract" model="ir.actions.report">
        <field name="name">พิมพ์สัญญา</field>
        <field name="model">maneerincode.code</field> <!-- โมเดลที่ใช้ในรายงาน -->
        <field name="report_type">qweb-pdf</field> <!-- ชนิดของรายงาน -->
        <field name="report_name">qweb_maneerin.report_contract_custom</field> <!-- ชื่อเทมเพลต -->
        <field name="report_file">qweb_maneerin.report_contract_custom</field> <!-- ไฟล์รายงานที่ใช้งาน -->
        <field name="print_report_name">"Report"</field> <!-- ชื่อที่พิมพ์ออกมา -->
        <field name="paperformat_id" ref="paper_format_custom_report"/> <!-- ใช้ paperformat ที่กำหนด -->
        <field name="binding_model_id" ref="model_maneerincode_code"/> <!-- โมเดลที่ผูกไว้ -->
        <field name="binding_type">report</field> <!-- ประเภทการผูก -->
    </record>

    <!-- Template Report -->
    <template id="report_contract_custom">
        <t t-call="web.basic_layout">
            <div class="page">
                <h2>รายงานสัญญา</h2>
                <table class="table">
                    <tr>
                        <th>ชื่อสัญญา</th>
                        <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                    </tr>
                    <tr>
                        <th>วันที่เริ่มต้น</th>
                        <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                    </tr>
                    <tr>
                        <th>วันที่สิ้นสุด</th>
                        <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                    </tr>
                    <tr>
                        <th>จำนวนเงิน</th>
                        <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                    </tr>
                    <tr>
                        <th>สถานะ</th>
                        <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                    </tr>
                </table>
            </div>
        </t>
    </template>
</odoo>
