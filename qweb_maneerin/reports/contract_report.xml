<odoo>
   <!-- Paper Format Definition -->
   <record id="paper_format_custom_report" model="report.paperformat">
       <field name="name">Report Custom Size</field>
       <field name="default" eval="True"/>
       <field name="page_width">210</field> 
       <field name="page_height">297</field> 
       <field name="orientation">Portrait</field>
       <field name="margin_top">15</field>
       <field name="margin_bottom">15</field>
       <field name="margin_left">15</field>
       <field name="margin_right">15</field>
       <field name="header_line" eval="False"/>
       <field name="header_spacing">0</field>
       <field name="dpi">90</field>
   </record>

   <!-- Report Action -->
   <record id="action_report_contract" model="ir.actions.report">
       <field name="name">พิมพ์สัญญา</field>
       <field name="model">maneerincode.code</field>
       <field name="report_type">qweb-pdf</field>
       <field name="report_name">qweb_maneerin.report_contract_custom</field>
       <field name="report_file">qweb_maneerin.report_contract_custom</field>
       <field name="print_report_name">"Report"</field> 
       <field name="paperformat_id" ref="paper_format_custom_report"/>
       <field name="binding_model_id" ref="model_maneerincode_code"/>
       <field name="binding_type">report</field>
   </record>

   <!-- Template Report -->
   <template id="report_contract_custom">
      <t t-call="web.basic_layout">
         <div class="page">
            <style>
               .page, .footer, .header, * {
                   font-family: 'Sarabun', sans-serif;
               }
            </style>
            <!-- Header Section -->
            <h2></h2>
            <p>
                <span>รายละเอียดการชำระเงิน/Payment details</span>
            </p>
            <p>
                <span>ช่องทางการชำระเงิน/Payment method: เงินสด/Cash   เช็ค/Cheque    โอนเงิน/Tranfer    บัตรเครดิต/Credit card</span>
            </p>
            <p>
                <span>ธนาคาร/Bank_______________เลขที่/No._______________วันที่ชำระ/Payment date_______________</span>
            </p>
            <p>
                <span>ยอดชำระ/Amount paid_____________________หัก ณ ที่จ่าย/Amount withheld_____________________</span>
            </p>

            <!-- Contract Information -->
<div class="row" style="position:absolute;top:80mm;width:100%;">
    <!-- ผู้รับเงิน -->
    <div class="col-4 text-center">
        <span style="border-bottom: 1px solid black; width: 40mm; display: inline-block;"/><br/>
        <span>ผู้รับเงิน/Received by</span><br/>
        <span>_________________</span><br/>
        <span>(_________________)</span><br/>
        <span>วันที่/Date:</span>
    </div>
    
    <!-- ผู้จัดทำ -->
    <div class="col-4 text-center">
        <span style="border-bottom: 1px solid black; width: 40mm; display: inline-block;"/><br/>
        <span>ผู้จัดทำ/Prepared by</span><br/>
        <span>_________________</span><br/>
        <span>(_________________)</span><br/>
        <span>วันที่/Date:</span>
    </div>
    
    <!-- ผู้อนุมัติ -->
    <div class="col-4 text-center">
        <span style="border-bottom: 1px solid black; width: 40mm; display: inline-block;"/><br/>
        <span>ผู้อนุมัติ/Approved by</span><br/>
        <span>_________________</span><br/>
        <span>(_________________)</span><br/>
        <span>วันที่/Date:</span>
    </div>
</div>
         </div>
      </t>
   </template>
</odoo>
