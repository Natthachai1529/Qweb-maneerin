<odoo>
   <!-- Paper Format Definition -->
   <!-- id สามารถตั้งเป็นชื่ออะไรก็ได้ แต่ต้องไม่ซ้ำกับ id อื่นในโมดูลเดียวกัน และจะทําไปใช้อ้างอิงใน Report Action -->
   <!-- model ไม่สามารถตั้งเปลี่ยชื่อได้ เนื่องจาก Odoo มีการใช้โมเดลนี้ในการจัดการกับการตั้งค่ากระดาษสำหรับรายงาน -->
   <record id="paper_format_custom_report" model="report.paperformat">
       <!-- กําหนดชื่อของกระดาษที่ถูกสร้างขึ้น -->
       <field name="name">Report Custom Size</field>
       <!-- กำหนดเป็นค่าเริ่มต้น -->
       <field name="default" eval="True"/>
       <!-- ความกว้างของกระดาษในมิลลิเมตร -->
       <field name="page_width">210</field> 
       <!-- ความสูงของกระดาษในมิลลิเมตร -->
       <field name="page_height">297</field> 
       <!--กําหนดรูปแบบกระดาษ แนวตั้ง (Portrait) หรือแนวนอน (Landscape) -->
       <field name="orientation">Portrait</field>
       <!-- ระยะห่างจากขอบด้านบน -->
       <field name="margin_top">15</field>
       <!-- ระยะห่างจากขอบด้านล่าง -->
       <field name="margin_bottom">15</field>
       <!-- ระยะห่างจากขอบด้านซ้าย -->
       <field name="margin_left">15</field>
       <!-- ระยะห่างจากขอบด้านขวา -->
       <field name="margin_right">15</field>
       <!-- ไม่แสดงเส้นหัวบนกระดาษ -->
       <field name="header_line" eval="False"/>
       <!-- ระยะห่างระหว่างส่วนหัวกับเนื้อหาเป็น 0 -->
       <field name="header_spacing">0</field>
       <!-- ความละเอียดของภาพ (DPI) -->
       <field name="dpi">90</field>
   </record>


   <!-- Report Action -->
   <!-- id สามารถตั้งเป็นชื่ออะไรก็ได้ แต่ต้องไม่ซ้ำกับ id อื่นในโมดูลเดียวกัน -->
   <!-- model ไม่สามารถเปลี่ยนแปลงได้ หากต้องการกำหนดการกระทำที่เกี่ยวข้องกับการพิมพ์รายงานใน Odoo -->
   <record id="action_report_contract" model="ir.actions.report">
       <!-- ตั้งชื่อการกระทำเป็น "พิมพ์สัญญา" ตั้งเป็นอะไรก็ได้ -->
       <field name="name">พิมพ์สัญญา</field>
       <!-- กำหนดโมเดลที่ใช้ในรายงานเป็น maneerincode.code เอามาจาก _name ของ python-->
       <field name="model">maneerincode.code</field>
       <!-- กำหนดประเภทของรายงานเป็น qweb-pdf *Fixed -->
       <field name="report_type">qweb-pdf</field>
       <!-- กำหนดชื่อไฟล์รายงาน -->
       <!-- qweb_maneerin เอามาจากหน้าหลัก Folder หลัก report_contract_custom เป็นชื่อของ template ที่จะ print -->
       <field name="report_name">qweb_maneerin.report_contract_custom</field>
       <!-- กำหนดไฟล์รายงานที่ต้องการใช้งาน เอามาจากด้านบน -->
       <field name="report_file">qweb_maneerin.report_contract_custom</field>
       <!-- กำหนดชื่อไฟล์ที่พิมพ์ออกมาเป็น "Report" -->
       <field name="print_report_name">"Report"</field> 
       <!-- กำหนดรูปแบบกระดาษที่ใช้เป็น paperformat_contract_report -->
       <!-- Ref คือ id ของ format paper ที่เรากําหนด -->
       <field name="paperformat_id" ref="paper_format_custom_report"/>
       <!-- กำหนดโมเดลที่ทำการผูกไว้สำหรับการพิมพ์เป็น model_maneerincode_code model + _name ใน python เปลี่ยน . เป็น _ -->
       <field name="binding_model_id" ref="model_maneerincode_code"/>
        <!-- กำหนดประเภทการผูกไว้เป็น report *Fixed -->
       <field name="binding_type">report</field>
   </record>


   <!-- Template Report -->
   <template id="report_contract_custom">
       <t t-call="web.basic_layout">
           <div class="page">
               <h2>รายงานสัญญา</h2>
               <table class="table">
                   <tr>
                       <th>ชื่อสัญญา</th>
                       <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                   </tr>
                   <tr>
                       <th>วันที่เริ่มต้น</th>
                       <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                   </tr>
                   <tr>
                       <th>วันที่สิ้นสุด</th>
                       <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                   </tr>
                   <tr>
                       <th>จำนวนเงิน</th>
                       <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                   </tr>
                   <tr>
                       <th>สถานะ</th>
                       <td></td>  <!-- ไม่มีการแสดงข้อมูล -->
                   </tr>
               </table>
           </div>
       </t>
   </template>
</odoo>
