<odoo>
    <!-- Define the custom paper format (if using paperformat_id) -->
    <record id="paper_format_custom_report" model="report.paperformat">
        <field name="name">Custom Paper Format</field>
        <field name="default" eval="True"/>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="dpi">90</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
    </record>

    <!-- Define the action to use the custom paper format -->
    <record id="action_report_contract" model="ir.actions.report">
        <field name="name">Contract Report</field>
        <field name="model">maneerincode.code</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">qweb_maneerin.report_contract_custom</field>
        <field name="report_file">qweb_maneerin.report_contract_custom</field>
        <field name="print_report_name">"Contract Report"</field>  
        <field name="paperformat_id" ref="paper_format_custom_report"/> <!-- Reference the custom paper format -->
        <field name="binding_model_id" ref="model_maneerincode_code"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Your QWeb template -->
    <template id="report_contract_custom">
        <t t-call="web.basic_layout">
            <div class="page">
                <h2>Contract Report</h2>
                <table class="table">
                    <tr>
                        <th>Contract Name</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Start Date</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>End Date</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Amount</th>
                        <td></td>
                    </tr>
                </table>
            </div>
        </t>
    </template>
</odoo>
