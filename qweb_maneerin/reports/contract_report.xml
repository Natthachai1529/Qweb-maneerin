<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- กำหนดขนาดหน้ากระดาษเอง -->
    <record id="paperformat_contract_report" model="report.paperformat">
        <field name="name">Contract Custom Size</field>
        <field name="default" eval="True"/>
        <field name="page_width">210</field>
        <field name="page_height">297</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <!-- Template สำหรับรายงาน -->
    <template id="report_contract_custom">
        <t t-call="web.basic_layout">
            <div class="page">
                <h2>รายงานสัญญา</h2>
                <table class="table">
                    <tr>
                        <th>ชื่อสัญญา</th>
                        <td>ข้อมูลที่ไม่ใช่ doc หรือ record</td>
                    </tr>
                    <tr>
                        <th>วันที่เริ่มต้น</th>
                        <td>ข้อมูลที่ไม่ใช่ doc หรือ record</td>
                    </tr>
                    <tr>
                        <th>วันที่สิ้นสุด</th>
                        <td>ข้อมูลที่ไม่ใช่ doc หรือ record</td>
                    </tr>
                    <tr>
                        <th>จำนวนเงิน</th>
                        <td>ข้อมูลที่ไม่ใช่ doc หรือ record</td>
                    </tr>
                    <tr>
                        <th>สถานะ</th>
                        <td>ข้อมูลที่ไม่ใช่ doc หรือ record</td>
                    </tr>
                </table>
            </div>
        </t>
    </template>

    <!-- การตั้งค่ารายงาน -->
    <record id="action_report_contract" model="ir.actions.report">
        <field name="name">พิมพ์สัญญา</field>
        <field name="model">maneerincode.code</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">qweb_maneerin.report_contract_custom</field>
        <field name="report_file">qweb_maneerin.report_contract_custom</field>
        <field name="paperformat_id" ref="paperformat_contract_report"/>
        <field name="binding_model_id" ref="model_maneerincode_code"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
