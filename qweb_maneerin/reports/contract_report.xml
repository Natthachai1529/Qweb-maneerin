<odoo>
    <!-- กำหนดรูปแบบกระดาษรายงานแบบกำหนดเอง -->
    <record id="paperformat_contract_report" model="report.paperformat">
        <!-- ชื่อกระดาษเป็น "Report Custom Size" -->
        <field name="name">Report Custom Size</field>
        <!-- กำหนดเป็นค่าเริ่มต้น (ใช้ในรายงานที่ต้องการ) -->
        <field name="default" eval="True"/>
        <!-- กำหนดความกว้างของหน้ากระดาษเป็น 210 มม. -->
        <field name="page_width">210</field>
        <!-- กำหนดความสูงของหน้ากระดาษเป็น 297 มม. -->
        <field name="page_height">297</field>
        <!-- กำหนดรูปแบบการพิมพ์เป็นแนวตั้ง (Portrait) -->
        <field name="orientation">Portrait</field>
        <!-- ตั้งค่าขอบกระดาษด้านบนเป็น 15 มม. -->
        <field name="margin_top">15</field>
        <!-- ตั้งค่าขอบกระดาษด้านล่างเป็น 15 มม. -->
        <field name="margin_bottom">15</field>
        <!-- ตั้งค่าขอบกระดาษด้านซ้ายเป็น 15 มม. -->
        <field name="margin_left">15</field>
        <!-- ตั้งค่าขอบกระดาษด้านขวาเป็น 15 มม. -->
        <field name="margin_right">15</field>
        <!-- ไม่แสดงเส้นหัวกระดาษ -->
        <field name="header_line" eval="False"/>
        <!-- กำหนดระยะห่างระหว่างส่วนหัวกับเนื้อหาเป็น 0 -->
        <field name="header_spacing">0</field>
        <!-- กำหนดค่า DPI เป็น 90 -->
        <field name="dpi">90</field>
    </record>

    <!-- กำหนดการกระทำของรายงาน -->
    <record id="action_report_contract" model="ir.actions.report">
        <!-- ตั้งชื่อการกระทำเป็น "พิมพ์สัญญา" -->
        <field name="name">พิมพ์สัญญา</field>
        <!-- กำหนดโมเดลที่ใช้ในรายงานเป็น maneerincode.code -->
        <field name="model">maneerincode.code</field>
        <!-- กำหนดประเภทของรายงานเป็น qweb-pdf -->
        <field name="report_type">qweb-pdf</field>
        <!-- กำหนดชื่อไฟล์รายงานเป็น qweb_maneerin.report_contract_custom -->
        <field name="report_name">qweb_maneerin.report_contract_custom</field>
        <!-- กำหนดไฟล์รายงานที่ต้องการใช้งาน -->
        <field name="report_file">qweb_maneerin.report_contract_custom</field>
        <!-- กำหนดชื่อรายงานที่พิมพ์ออกมาเป็น "Report" -->
        <field name="print_report_name">"Report"</field>
        <!-- กำหนดรูปแบบกระดาษที่ใช้เป็น paperformat_contract_report -->
        <field name="paperformat_id" ref="paperformat_contract_report"/>
        <!-- กำหนดโมเดลที่ทำการผูกไว้สำหรับการพิมพ์เป็น model_maneerincode_code -->
        <field name="binding_model_id" ref="model_maneerincode_code"/>
        <!-- กำหนดประเภทการผูกไว้เป็น report -->
        <field name="binding_type">report</field>
    </record>

    <!-- กำหนดเทมเพลตของรายงาน -->
    <template id="report_contract_custom">
        <!-- เรียกใช้เทมเพลตพื้นฐานของ Odoo -->
        <t t-call="web.basic_layout">
            <!-- สร้างหน้ารายงาน -->
            <div class="page">
                <!-- หัวเรื่องของรายงานเป็น "รายงานสัญญา" -->
                <h2>รายงานสัญญา</h2>
                <!-- ตารางข้อมูลในรายงาน -->
                <table class="table">
                    <tr>
                        <!-- หัวข้อของแถวเป็น "ชื่อสัญญา" -->
                        <th>ชื่อสัญญา</th>
                        <!-- คอลัมน์แสดงข้อมูลเป็นค่าว่าง ไม่มีการแสดงข้อมูล -->
                        <td></td>
                    </tr>
                    <tr>
                        <!-- หัวข้อของแถวเป็น "วันที่เริ่มต้น" -->
                        <th>วันที่เริ่มต้น</th>
                        <!-- คอลัมน์แสดงข้อมูลเป็นค่าว่าง ไม่มีการแสดงข้อมูล -->
                        <td></td>
                    </tr>
                    <tr>
                        <!-- หัวข้อของแถวเป็น "วันที่สิ้นสุด" -->
                        <th>วันที่สิ้นสุด</th>
                        <!-- คอลัมน์แสดงข้อมูลเป็นค่าว่าง ไม่มีการแสดงข้อมูล -->
                        <td></td>
                    </tr>
                    <tr>
                        <!-- หัวข้อของแถวเป็น "จำนวนเงิน" -->
                        <th>จำนวนเงิน</th>
                        <!-- คอลัมน์แสดงข้อมูลเป็นค่าว่าง ไม่มีการแสดงข้อมูล -->
                        <td></td>
                    </tr>
                    <tr>
                        <!-- หัวข้อของแถวเป็น "สถานะ" -->
                        <th>สถานะ</th>
                        <!-- คอลัมน์แสดงข้อมูลเป็นค่าว่าง ไม่มีการแสดงข้อมูล -->
                        <td></td>
                    </tr>
                </table>
            </div>
        </t>
    </template>
</odoo>
