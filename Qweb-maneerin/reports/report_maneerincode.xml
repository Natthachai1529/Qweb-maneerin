<odoo>
    <report
        id="report_maneerincode"
        model="maneerincode.code"
        string="Maneerin Code Report"
        report_type="qweb-pdf"
        name="your_module_name.report_maneerincode_template"
        file="your_module_name.report_maneerincode_template"
        menu="True"/>

    <template id="report_maneerincode_template">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Maneerin Code Report</h2>
                <p>เลขที่สัญญา: <t t-esc="doc.contract_no"/></p>
                <p>วันที่ติดต่อ: <t t-esc="doc.contact_date"/></p>
                <p>ผู้ขาย: <t t-esc="doc.seller.name"/></p>
                
                <h3>ผู้จะซื้อ</h3>
                <table class="table table-bordered">
                    <tr>
                        <th>ชื่อ</th>
                        <th>อายุ</th>
                        <th>สัญชาติ</th>
                        <th>ถนน</th>
                        <th>โทรศัพท์</th>
                    </tr>
                    <t t-foreach="doc.buyer_ids" t-as="buyer">
                        <tr>
                            <td><t t-esc="buyer.partner_id.name"/></td>
                            <td><t t-esc="buyer.age"/></td>
                            <td><t t-esc="buyer.nation"/></td>
                            <td><t t-esc="buyer.street"/></td>
                            <td><t t-esc="buyer.phone"/></td>
                        </tr>
                    </t>
                </table>

                <h3>ผู้รับสิทธิ์</h3>
                <table class="table table-bordered">
                    <tr>
                        <th>ชื่อ</th>
                        <th>อายุ</th>
                        <th>สัญชาติ</th>
                        <th>ถนน</th>
                        <th>โทรศัพท์</th>
                    </tr>
                    <t t-foreach="doc.beneficiary_ids" t-as="beneficiary">
                        <tr>
                            <td><t t-esc="beneficiary.partner_id.name"/></td>
                            <td><t t-esc="beneficiary.age"/></td>
                            <td><t t-esc="beneficiary.nation"/></td>
                            <td><t t-esc="beneficiary.street"/></td>
                            <td><t t-esc="beneficiary.phone"/></td>
                        </tr>
                    </t>
                </table>
            </div>
        </t>
    </template>
</odoo>
