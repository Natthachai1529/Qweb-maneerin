<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_maneerin_template">
            <t t-call="web.html_container">
                <div class="page">
                    <h2>รายงานสัญญา</h2>
                    
                    <!-- ข้อมูลสัญญา -->
                    <p>ชื่อสัญญา: <span t-esc="doc.name"/></p>
                    <p>วันที่เริ่มสัญญา: <span t-esc="doc.start_date"/></p>
                    <p>วันที่สิ้นสุดสัญญา: <span t-esc="doc.end_date"/></p>
                    
                    <!-- ข้อมูลบริษัท -->
                    <p>บริษัท: <span t-esc="doc.company_id.name"/></p>

                    <!-- รายละเอียดสัญญา -->
                    <h3>รายละเอียดสัญญา</h3>
                    <p t-esc="doc.description"/>

                    <!-- ตารางรายการ -->
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>รายการ</th>
                                <th>จำนวน</th>
                                <th>ราคา</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.line_ids" t-as="line">
                                <td t-esc="line.name"/>
                                <td t-esc="line.quantity"/>
                                <td t-esc="line.price_unit"/>
                            </tr>
                        </tbody>
                    </table>

                    <!-- ข้อความท้าย -->
                    <div class="footer">
                        <p>ขอบคุณที่ใช้บริการ</p>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
