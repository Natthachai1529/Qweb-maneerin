<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_report" model="report.paperformat">
            <field name="name">Contract A4 Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height" eval="210"/> <!-- ความสูงของ A4 คือ 210 mm -->
            <field name="page_width" eval="297"/>  <!-- ความกว้างของ A4 คือ 297 mm -->
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
    </data>
</odoo>
