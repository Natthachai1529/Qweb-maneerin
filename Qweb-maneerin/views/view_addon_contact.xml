<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">addon.contact.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- เพิ่มฟิลด์ใหม่หลังจากฟิลด์ VAT -->
            <xpath expr="//field[@name='vat']" position="after">
                <field name="partner_age" string="Age"/>
                <field name="partner_nation" string="Nationality"/>
                <field name="identification_number" string="Identification Number"/>
            </xpath>
        </field>
    </record>
</odoo>
