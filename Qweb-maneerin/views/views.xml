<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Maneerin Code Form View -->
    <record id="view_maneerincode_form" model="ir.ui.view">
        <field name="name">maneerincode.form</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="contract_no" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="contact_date"/>
                            <field name="seller" string="ผู้จะขาย"/>
                        </group>
                    </group>
                    <group>
                        <field name="buyer_ids" string="ผู้จะซื้อ">
                            <tree editable="bottom">
                                <field name="name" string="ชื่อ"/>
                                <field name="age" string="อายุ"/>
                                <field name="nation" string="สัญชาติ"/>
                                <field name="street" string="ถนน"/>
                                <field name="phone" string="โทรศัพท์"/>
                            </tree>
                        </field>
                        <field name="beneficiary_ids" string="ผู้รับสิทธิ์">
                            <tree editable="bottom">
                                <field name="name" string="ชื่อ"/>
                                <field name="age" string="อายุ"/>
                                <field name="nation" string="สัญชาติ"/>
                                <field name="street" string="ถนน"/>
                                <field name="phone" string="โทรศัพท์"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_maneerincode" model="ir.actions.act_window">
        <field name="name">Maneerin Code</field>
        <field name="res_model">maneerincode.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_maneerincode_root" 
              name="Maneerin Code Management" 
              web_icon="maneerincode,static/description/icon.png"
              sequence="1"/>
    
    <menuitem id="menu_maneerincode" 
              name="Maneerin Code List"
              parent="menu_maneerincode_root"
              action="action_maneerincode"
              sequence="1"/>
</odoo>
