<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="maneerincode_view_form" model="ir.ui.view">
        <field name="name">maneerincode Form</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <form string="Maneerin Code Form">
                <sheet>
                    <group>
                        <field name="contract_no" string="เลขที่สัญญา"/>
                        <field name="contact_date" string="Contact Date"/>
                        <field name="seller_id" string="ผู้จะขาย"/>
                    </group>
                    
                    <group>
                        <label for="buyer_ids" string="ผู้จะซื้อ"/>
                        <field name="buyer_ids" widget="one2many_list">
                            <tree>
                                <field name="buyer_id" string="ผู้ซื้อ"/>
                                <field name="name" string="Name"/>
                                <field name="age" string="Age"/>
                                <field name="nation" string="Nation"/>
                                <field name="street" string="Street"/>
                                <field name="phone" string="Phone"/>
                            </tree>
                        </field>
                    </group>
                    
                    <group>
                        <label for="beneficiary_ids" string="ผู้รับสิทธิ์โอน"/>
                        <field name="beneficiary_ids" widget="one2many_list">
                            <tree>
                                <field name="name" string="Name"/>
                                <field name="age" string="Age"/>
                                <field name="nation" string="Nation"/>
                                <field name="street" string="Street"/>
                                <field name="phone" string="Phone"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="maneerincode_view_tree" model="ir.ui.view">
        <field name="name">maneerincode Tree</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <tree string="Maneerin Code List">
                <field name="contract_no" string="เลขที่สัญญา"/>
                <field name="contact_date" string="Contact Date"/>
                <field name="seller_id" string="ผู้จะขาย"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="maneerincode_action" model="ir.actions.act_window">
        <field name="name">Maneerin Code</field>
        <field name="res_model">maneerincode.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="maneerincode_menu" name="Maneerin Code" sequence="1" action="maneerincode_action"/>
</odoo>
