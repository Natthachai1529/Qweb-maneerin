<odoo>
    <record id="view_maneerincode_form" model="ir.ui.view">
        <field name="name">maneerincode.form</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <form string="Maneerin Code">
                <sheet>
                    <group>
                        <group>
                            <field name="contract_no" style="width: 300px;" />
                            <field name="contact_date" style="width: 200px;" />
                            <field name="seller" style="width: 300px;" />
                        </group>
                    </group>
                    <group>
                        <label for="buyer_ids" string="ผู้จะซื้อ" />
                        <field name="buyer_ids" widget="one2many_list" >
                            <tree>
                                <field name="name" string="Name" style="width: 200px;" />
                                <field name="age" string="Age" style="width: 80px;" />
                                <field name="nation" string="Nation" style="width: 150px;" />
                                <field name="street" string="Street" style="width: 200px;" />
                                <field name="phone" string="Phone" style="width: 150px;" />
                            </tree>
                        </field>
                    </group>
                    <group>
                        <label for="beneficiary_ids" string="ผู้รับสิทธิ์โอน" />
                        <field name="beneficiary_ids" widget="one2many_list">
                            <tree>
                                <field name="name" string="Name" style="width: 200px;" />
                                <field name="age" string="Age" style="width: 80px;" />
                                <field name="nation" string="Nation" style="width: 150px;" />
                                <field name="street" string="Street" style="width: 200px;" />
                                <field name="phone" string="Phone" style="width: 150px;" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_maneerincode_tree" model="ir.ui.view">
        <field name="name">maneerincode.tree</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <tree string="Maneerin Code">
                <field name="contract_no" />
                <field name="contact_date" />
                <field name="seller" />
            </tree>
        </field>
    </record>

    <record id="action_maneerincode" model="ir.actions.act_window">
        <field name="name">Maneerin Code</field>
        <field name="res_model">maneerincode.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_maneerincode" name="Maneerin Code" action="action_maneerincode" />
</odoo>
