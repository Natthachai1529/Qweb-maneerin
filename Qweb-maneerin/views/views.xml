<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contract Form View -->
    <record id="view_contract_form" model="ir.ui.view">
        <field name="name">contract.contract.form</field>
        <field name="model">contract.contract</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="contract_date" string="วันที่สัญญา"/>
                            <field name="project_name" string="ชื่อโปรเจกต์"/>
                            <field name="land_id" string="ที่ดิน"/>
                            <field name="seller_id" widget="many2one" string="ผู้จะขาย"/>
                        </group>
                    </group>
                    <group>
                        <label for="buyer_ids" string="ผู้จะซื้อ"/>
                        <field name="buyer_ids" domain="[('active', '=', True)]">
                            <tree editable="bottom">
                                <field name="active" column_invisible="1"/>
                                <field name="partner_id" string="ผู้ซื้อ"/>
                                <field name="age" string="อายุ"/>
                                <field name="nation" string="สัญชาติ"/>
                                <field name="street" string="ถนน"/>
                                <field name="phone" string="โทรศัพท์"/>
                            </tree>
                        </field>
                        <label for="transferee_ids" string="ผู้รับโอนสิทธิ์"/>
                        <field name="transferee_ids" domain="[('active', '=', True)]">
                            <tree editable="bottom">
                                <field name="active" column_invisible="1"/>
                                <field name="partner_id" string="ผู้รับโอน"/>
                                <field name="age" string="อายุ"/>
                                <field name="nation" string="สัญชาติ"/>
                                <field name="street" string="ถนน"/>
                                <field name="phone" string="โทรศัพท์"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_contract" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">contract.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_contract_root" 
              name="การจัดการสัญญา" 
              web_icon="contract,static/description/icon.png"
              sequence="1"/>
    
    <menuitem id="menu_contract" 
              name="รายการสัญญา"
              parent="menu_contract_root"
              action="action_contract"
              sequence="1"/>
</odoo>
