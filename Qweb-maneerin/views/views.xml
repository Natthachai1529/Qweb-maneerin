<odoo>
    <record id="maneerincode_view_form" model="ir.ui.view">
        <field name="name">maneerincode.code.form</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <form string="Maneerin Code">
                <sheet>
                    <group>
                        <field name="contract_no" string="เลขที่สัญญา"/>
                        <field name="contact_date" string="Contact Date"/>
                        <field name="seller_id" string="ผู้จะขาย"/>  <!-- ใช้ seller_id -->
                    </group>
                    <group>
                        <label for="buyer_ids" string="ผู้จะซื้อ"/>
                        <field name="buyer_ids" widget="one2many_list">
                            <tree>
                                <field name="partner_id" string="ผู้ซื้อ"/>  <!-- เลือกจาก res.partner -->
                                <field name="name" string="Name" invisible="1"/> <!-- ซ่อนฟิลด์ name -->
                                <field name="age" string="Age" invisible="1"/>   <!-- ซ่อนฟิลด์ age -->
                                <field name="nation" string="Nation" invisible="1"/> <!-- ซ่อนฟิลด์ nation -->
                                <field name="street" string="Street" invisible="1"/> <!-- ซ่อนฟิลด์ street -->
                                <field name="phone" string="Phone" invisible="1"/> <!-- ซ่อนฟิลด์ phone -->
                            </tree>
                        </field>
                    </group>
                    <group>
                        <label for="beneficiary_ids" string="ผู้รับสิทธิ์โอน"/>
                        <field name="beneficiary_ids" widget="one2many_list">
                            <tree>
                                <field name="partner_id" string="ผู้รับสิทธิ์"/>  <!-- เลือกจาก res.partner -->
                                <field name="name" string="Name" invisible="1"/> <!-- ซ่อนฟิลด์ name -->
                                <field name="age" string="Age" invisible="1"/>   <!-- ซ่อนฟิลด์ age -->
                                <field name="nation" string="Nation" invisible="1"/> <!-- ซ่อนฟิลด์ nation -->
                                <field name="street" string="Street" invisible="1"/> <!-- ซ่อนฟิลด์ street -->
                                <field name="phone" string="Phone" invisible="1"/> <!-- ซ่อนฟิลด์ phone -->
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="maneerincode_view_tree" model="ir.ui.view">
        <field name="name">maneerincode.code.tree</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <tree string="Maneerin Codes">
                <field name="contract_no" string="เลขที่สัญญา"/>
                <field name="contact_date" string="Contact Date"/>
                <field name="seller_id" string="ผู้จะขาย"/>
            </tree>
        </field>
    </record>

    <record id="action_maneerincode" model="ir.actions.act_window">
        <field name="name">Maneerin Codes</field>
        <field name="res_model">maneerincode.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_maneerincode_root" name="Maneerin Code"/>
    <menuitem id="menu_maneerincode" name="Maneerin Codes" parent="menu_maneerincode_root" action="action_maneerincode"/>
</odoo>
