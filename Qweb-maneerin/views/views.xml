<odoo>
    <record id="maneerincode_view_form" model="ir.ui.view">
        <field name="name">maneerincode.code.form</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <form string="Maneerin Code">
                <sheet>
                    <group>
                        <field name="contract_no" string="เลขที่สัญญา"/>
                        <field name="contact_date" string="Contact Date"/>
                        <field name="seller" string="ผู้จะขาย"/>
                    </group>
                    <group>
                        <field name="buyer_ids" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="partner_id" string="ผู้ซื้อ"/>
                                <field name="age" string="Age"/>
                                <field name="nation" string="Nation"/>
                                <field name="street" string="Street"/>
                                <field name="phone" string="Phone"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <field name="beneficiary_ids" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="partner_id" string="ผู้รับสิทธิ์"/>
                                <field name="age" string="Age"/>
                                <field name="nation" string="Nation"/>
                                <field name="street" string="Street"/>
                                <field name="phone" string="Phone"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="%(action_report_maneerincode)d" type="action" string="พิมพ์รายงาน" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="maneerincode_view_tree" model="ir.ui.view">
        <field name="name">maneerincode.code.tree</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <tree string="Maneerin Codes">
                <field name="contract_no" string="เลขที่สัญญา"/>
                <field name="contact_date" string="Contact Date"/>
                <field name="seller" string="ผู้จะขาย"/>
            </tree>
        </field>
    </record>

    <record id="action_report_maneerincode" model="ir.actions.report">
        <field name="name">รายงาน Maneerin Code</field>
        <field name="model">maneerincode.code</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">your_module_name.report_maneerincode</field> <!-- แทนที่ด้วยชื่อโมดูลของคุณ -->
        <field name="report_file">your_module_name.report_maneerincode</field> <!-- แทนที่ด้วยชื่อโมดูลของคุณ -->
    </record>

    <menuitem id="menu_maneerincode_root" name="Maneerin Code"/>
    <menuitem id="menu_maneerincode" name="Maneerin Codes" parent="menu_maneerincode_root" action="action_report_maneerincode"/>
</odoo>
