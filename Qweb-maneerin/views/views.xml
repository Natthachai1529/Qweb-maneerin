<odoo>
    <record id="view_buyer_form" model="ir.ui.view">
        <field name="name">buyer.form</field>
        <field name="model">buyer.code</field>
        <field name="arch" type="xml">
            <form string="Buyer">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="nation"/>
                        <field name="street"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_buyer_tree" model="ir.ui.view">
        <field name="name">buyer.tree</field>
        <field name="model">buyer.code</field>
        <field name="arch" type="xml">
            <tree string="Buyers">
                <field name="name"/>
                <field name="age"/>
                <field name="nation"/>
                <field name="street"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="action_buyer" model="ir.actions.act_window">
        <field name="name">Buyers</field>
        <field name="res_model">buyer.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_buyer" name="Buyers" action="action_buyer"/>

    <record id="view_beneficiary_form" model="ir.ui.view">
        <field name="name">beneficiary.form</field>
        <field name="model">beneficiary.code</field>
        <field name="arch" type="xml">
            <form string="Beneficiary">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="nation"/>
                        <field name="street"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_beneficiary_tree" model="ir.ui.view">
        <field name="name">beneficiary.tree</field>
        <field name="model">beneficiary.code</field>
        <field name="arch" type="xml">
            <tree string="Beneficiaries">
                <field name="name"/>
                <field name="age"/>
                <field name="nation"/>
                <field name="street"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="action_beneficiary" model="ir.actions.act_window">
        <field name="name">Beneficiaries</field>
        <field name="res_model">beneficiary.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_beneficiary" name="Beneficiaries" action="action_beneficiary"/>
</odoo>
