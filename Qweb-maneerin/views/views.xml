<odoo>
    <record id="maneerincode_view_form" model="ir.ui.view">
        <field name="name">maneerincode.code.form</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <form string="Maneerin Code">
                <sheet>
                    <group>
                        <field name="contract_no" string="เลขที่สัญญา"/>
                        <field name="contact_date" string="Contact Date"/>
                        <field name="seller" string="ผู้จะขาย"/>
                    </group>
                    <group>
                        <label for="buyer_id" string="ผู้จะซื้อ"/>
                        <field name="buyer_id" widget="many2one"/>
                        <field name="age" string="Age" readonly="1" attrs="{'invisible': [('buyer_id', '=', False)]}"/>
                        <field name="nation" string="Nation" readonly="1" attrs="{'invisible': [('buyer_id', '=', False)]}"/>
                        <field name="street" string="Street" readonly="1" attrs="{'invisible': [('buyer_id', '=', False)]}"/>
                        <field name="phone" string="Phone" readonly="1" attrs="{'invisible': [('buyer_id', '=', False)]}"/>
                    </group>
                    <group>
                        <label for="beneficiary_id" string="ผู้รับสิทธิ์"/>
                        <field name="beneficiary_id" widget="many2one"/>
                        <field name="age" string="Age" readonly="1" attrs="{'invisible': [('beneficiary_id', '=', False)]}"/>
                        <field name="nation" string="Nation" readonly="1" attrs="{'invisible': [('beneficiary_id', '=', False)]}"/>
                        <field name="street" string="Street" readonly="1" attrs="{'invisible': [('beneficiary_id', '=', False)]}"/>
                        <field name="phone" string="Phone" readonly="1" attrs="{'invisible': [('beneficiary_id', '=', False)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="maneerincode_view_tree" model="ir.ui.view">
        <field name="name">maneerincode.code.tree</field>
        <field name="model">maneerincode.code</field>
        <field name="arch" type="xml">
            <tree string="Maneerin Codes">
                <field name="contract_no" string="เลขที่สัญญา"/>
                <field name="contact_date" string="Contact Date"/>
                <field name="seller" string="ผู้จะขาย"/>
            </tree>
        </field>
    </record>

    <record id="action_maneerincode" model="ir.actions.act_window">
        <field name="name">Maneerin Codes</field>
        <field name="res_model">maneerincode.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_maneerincode_root" name="Maneerin Code"/>
    <menuitem id="menu_maneerincode" name="Maneerin Codes" parent="menu_maneerincode_root" action="action_maneerincode"/>
</odoo>
