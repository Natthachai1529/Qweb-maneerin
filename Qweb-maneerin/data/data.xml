<odoo>
    <record id="model_x_contract_contract" model="ir.model">
        <field name="name">X Contract</field>
        <field name="model">x.contract.contract</field>
    </record>

    <record id="action_print_contract" model="ir.actions.server">
        <field name="name">Print Contract</field>
        <field name="model_id" ref="model_x_contract_contract"/>
        <field name="binding_model_id" ref="model_x_contract_contract"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_print_contract()</field>
    </record>
</odoo>
